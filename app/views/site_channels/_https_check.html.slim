- if current_channel.details.supports_https?
  .note-text
    = image_tag("check@1x.png", alt: t("publishers.verification_https_check_alt"), class: "https-check-icon")
    = t("publishers.verification_https_check")
- else
  .note-text
    = image_tag("x.png", alt: t("publishers.verification_https_check_no_https_alt"), class: "https-check-icon")
    = t("publishers.verification_https_check_no_https")
  = form_for(current_channel.details, method: :patch, url: check_for_https_site_channel_path(current_channel)) do |f|
    = f.submit(t("publishers.check_for_https_button"), class: "btn btn-primary btn-sm btn-check-https")
.clearfix